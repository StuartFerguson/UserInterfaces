@{
    ViewBag.Title = "Create Golf Club";
    Layout = "~/Areas/GolfClubAdministrator/Views/Shared/_Layout.cshtml";
}

@model CreateGolfClubViewModel

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Golf Club</h1>
                        </div>
                        <form id="createGolfClubForm" asp-action="CreateGolfClub" asp-area="GolfClubAdministrator" asp-controller="Home" method="post" class="user">
                            <div class="form-group">
                                <input asp-for="Name" class="form-control form-control-user" placeholder="Golf Club Name" required autofocus />
                            </div>

                            <div class="form-group">
                                <input asp-for="AddressLine1" class="form-control form-control-user" placeholder="Address Line 1" required autofocus />
                            </div>

                            <div class="form-group">
                                <input asp-for="AddressLine2" class="form-control form-control-user" placeholder="Address Line 2" autofocus />
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Town" class="form-control form-control-user" placeholder="Town / City" required autofocus />
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Region" class="form-control form-control-user" placeholder="Region" required autofocus />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="PostalCode" class="form-control form-control-user" placeholder="Post Code" required autofocus />
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="TelephoneNumber" class="form-control form-control-user" placeholder="Telephone Number" required autofocus />
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="EmailAddress" class="form-control form-control-user" placeholder="Email Address" required autofocus />
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Website" class="form-control form-control-user" placeholder="Golf Club Website" autofocus />
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-user btn-block"><i class="fa fa-plus"></i> Create Club</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>