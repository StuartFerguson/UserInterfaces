@model List<MeasuredCourseListViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/GolfClubAdministrator/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <table id="usersList" class="table table-striped table-bordered nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>User Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>User Name</th>
                <th>User Type</th>
            </tr>
        </thead>
    </table>

    <a class="btn btn-primary btn-user btn-block" asp-action="CreateMatchSecretaryUser" asp-controller="Home" asp-area="GolfClubAdministrator"><i class="fa fa-plus"></i> New Match Secretary</a>
</div>

<script>
    $(document).ready(function ()
        {
            $("#usersList").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "GetUserListAsJson",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "userId", "name": "UserId", "autoWidth": true },
                    { "data": "fullName", "name": "Name", "autoWidth": true },
                    { "data": "email", "name": "Email", "autoWidth": true },
                    { "data": "userName", "name": "UserName", "autoWidth": true },
                    { "data": "userType", "name": "UserType", "autoWidth": true }
                ],
                "order": [[3, "asc"]]
            });
        });

</script>
